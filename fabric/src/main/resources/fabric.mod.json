{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_author}"
  ],
  "contact": {
    "issues": "${issue_tracker}"
  },
  "license": "${license}",
  "icon": "${mod_id}_icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.illusivesoulworks.veinmining.VeinMiningFabricMod"
    ],
    "client": [
      "com.illusivesoulworks.veinmining.client.VeinMiningFabricClientMod"
    ],
    "spectrelib": [
      "com.illusivesoulworks.veinmining.VeinMiningFabricMod"
    ]
  },
  "mixins": [
    "veinmining.mixins.json",
    "veinmining.fabric.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.23",
    "fabric-api": "*",
    "minecraft": "${fabric_mc_version_range}",
    "java": ">=17"
  }
}
